<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D95F6"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费项目:"
            android:textColor="#FFFFFF"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_total_money_vs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="合计"
            android:textColor="#FFFFFF"
            android:textSize="40px" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_left_120"
        android:layout_marginLeft="@dimen/min_interval_40"
        android:layout_marginRight="@dimen/min_interval_40"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="false"
            android:text="名称（编码）"
            android:textColor="@color/nomal_font_color"
            android:textSize="30px" />

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/login_98px"
            android:layout_gravity="center_vertical"
            android:background="#BABABA" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="数量"
            android:textColor="@color/nomal_font_color"
            android:textSize="30px" />

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/login_98px"
            android:layout_gravity="center_vertical"
            android:background="#BABABA" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="折后金额"
            android:textColor="@color/nomal_font_color"
            android:textSize="30px" />
    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.7dip"
        android:layout_marginLeft="@dimen/min_interval_40"
        android:layout_marginRight="@dimen/min_interval_40"
        android:background="#000000" />

    <ListView
        android:id="@+id/vs_listView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/min_interval_40"
        android:layout_marginRight="@dimen/min_interval_40"
        android:layout_weight="1" />


</LinearLayout>
