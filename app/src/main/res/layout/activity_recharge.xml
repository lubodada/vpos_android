<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@anim/phone_style"
                android:drawableLeft="@drawable/phone_icon"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入电话号码"
                android:inputType="phone"
                android:padding="10px"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@color/base_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/tx_phone_monery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dip"
                android:shadowColor="#6E6E6E"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="话费充值"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:background="#ff4333" />

            <TextView
                android:id="@+id/tx_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:shadowColor="#6E6E6E"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="流量充值"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="选择充值金额:"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="10元"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="20元"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_tri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="30元"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text=" 50元  "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="100元"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="200元"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_sev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="300元"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="500元"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@anim/round_textview"
                android:gravity="center"
                android:padding="8dp"
                android:text="1000元"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/ed_monery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@anim/phone_style"
                android:drawableLeft="@drawable/momery_icon"
                android:hint="其他金额"
                android:inputType="number"
                android:padding="10px" />
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ed_yue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tx_Pay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:background="#ff4334"
        android:gravity="center"
        android:text="立 即 充 值"
        android:textColor="@color/white" />

</RelativeLayout>